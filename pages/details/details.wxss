/* pages/details/details.wxss */
.xq_box1{
  width: 100%;
  height: 500rpx;
  position: relative;
  overflow: hidden;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}
.xq_box1_bg{
  position: absolute;
  width: 100%;
  height: 500rpx;
  z-index: 1;
}
.xq_box1_msg{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  height: 195rpx;
  background: rgba(0,0,0,.4);
  display:flex;
}
.xq_add{
  flex: 1;
  padding: 0 40rpx;
  box-sizing: border-box;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 30rpx;
}
.xq_add view{
  padding-left: 50rpx;
  background-position: top left;
  background-size: 35rpx 35rpx;
  background-repeat: no-repeat;
  position: relative;
}
.xq_add  image{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 0;
}
.tel_btn{
  flex: none;
  width: 185rpx;
  height: 195rpx;
  background-position: center;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.tel_btn image{
  width: 185rpx;
  height: 195rpx;
}
.xq_box2{
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}
.xq_box2 view{
  flex: 1;
  margin: 0 5rpx;
  background: #101426;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 25rpx;
}
button{
  width: 100%;
  background: transparent;
  color: #fff;
  font-size: 25rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.xq_box3{
  width: 100%;
  padding: 36rpx 46rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: 1px solid #eee;
}
.xq_title{
  font-size: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 45rpx;
}
.xq_title image{
  width: 42rpx;
  height: 42rpx;
  margin-right: 16rpx;
}
.xq_li_msg{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 22rpx;
}
.xq_li_msg .xd{
  width: 8rpx;
  height: 8rpx;
  border-radius: 8rpx;
  background: #6f6e6f;
  margin-right: 20rpx;
}
.c5099f7{
  color: #5099f7;
}
.xq_li_xbox{
  width: 45rpx;
  height: 45rpx;
  border-radius: 5rpx;
  border: 5rpx solid #999999;
  background: #e1e1e1;
  flex: none;
}
.xq_li_xbox.cur{
  border: 5rpx solid #FFDA2E;
  background: #FFDA2E;
}