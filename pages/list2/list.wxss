/* pages/list/list.wxss */
.container{
  padding-top: 180rpx;
}
.li_box{
  width: 100%;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  letter-spacing:4rpx;
  font-family: Arial, Helvetica, sans-serif
}
.li_go{
  flex: none;
  width: 50rpx;
  height: 50rpx;
}
.li_go image{
  width: 100%;
  height: 100%;
}
.li_tit{
  font-size: 32rpx;
  color: #727272;
  font-weight: bold;
  line-height: 45rpx;
  margin-bottom: 10rpx;
}
.li_h2{
  font-size: 22rpx;
  color: #3c8cf6;
  margin-bottom: 10rpx;
}
.li_add{
font-size: 22rpx;
  color: #969696;
  font-weight: bold;
  line-height: 35rpx;
}



.index_box1{
  width: 100%;
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
  background: #101426;
  padding: 15rpx 0 0;
  box-sizing: border-box;
  position: fixed;
  top: 0;
}


.sousuo_box{
  width: 694rpx;
  height:55rpx;
  background:rgba(255,255,255,1);
  border-radius:28px;
  font-size: 24rpx;
  color: #BBBBBB;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
}
.sousuo_box text{
  margin-right: 20rpx;
}
.sousuo_box input{
  width: 100%;
}
.li_tab{
  width: 100%;
  height: 80rpx;
  display: flex;
  background: #fff;
  margin-top: 15rpx;
  border-bottom: 1px solid #eee;
  font-size: 30rpx;
  justify-content: space-around;
  align-items: center;
}
.li_tab view{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}
.li_tab view:first-child{
  border-right: 1px solid #eee;
}
.li_tab view.cur{
  color: #333;
}